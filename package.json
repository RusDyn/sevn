{
  "private": true,
  "name": "@acme/monorepo",
  "scripts": {
    "dev": "turbo dev",
    "dev:sevn": "turbo dev --filter=\"{./apps/sevn}...\"",
    "dev:extension": "turbo dev --filter=\"{./apps/extension}...\"",
    "lint": "turbo lint",
    "test": "turbo test",
    "build": "turbo build",
    "build:sevn": "turbo build --filter=\"...{./apps/sevn}\"",
    "build:extension": "turbo build --filter=\"...{./apps/extension}\""
  },
  "devDependencies": {
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
