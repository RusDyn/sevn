{
  "private": true,
  "name": "@sevn/app-mobile",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "scripts": {
    "dev": "expo start",
    "lint": "eslint --ext js,ts,tsx .",
    "test": "jest",
    "build": "expo export --output-dir ./build --platform all",
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "eas-build-post-install": "pnpm run -w build:mobile"
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.3",
    "@react-navigation/bottom-tabs": "^7.4.0",
    "@react-navigation/elements": "^2.6.3",
    "@react-navigation/native": "^7.1.8",
    "@sevn/feature-home": "workspace:*",
    "@sevn/task-core": "workspace:*",
    "@sevn/ui": "workspace:*",
    "expo": "~54.0.25",
    "expo-haptics": "~15.0.7",
    "expo-image": "~3.0.10",
    "expo-router": "~6.0.15",
    "expo-splash-screen": "~31.0.11",
    "expo-status-bar": "~3.0.8",
    "expo-symbols": "~1.0.7",
    "expo-system-ui": "~6.0.8",
    "expo-web-browser": "~15.0.9",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-reanimated": "~4.1.5",
    "react-native-web": "~0.21.0",
    "react-native-worklets": "^0.5.2"
  },
  "devDependencies": {
    "@babel/plugin-proposal-export-namespace-from": "^7.18.9",
    "@expo/metro": "^0.1.1",
    "@expo/metro-runtime": "~6.1.2",
    "@sevn/eslint-config": "workspace:*",
    "@testing-library/react-native": "^13.2.0",
    "@types/react": "~19.1.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-expo": "~54.0.13",
    "typescript": "~5.9.2"
  },
  "eslintConfig": {
    "extends": "@sevn/eslint-config",
    "ignorePatterns": [
      "node_modules",
      "build",
      ".expo",
      ".expo-shared",
      "*.d.ts"
    ],
    "overrides": [
      {
        "files": [
          "*.js"
        ],
        "env": {
          "node": true
        }
      }
    ]
  },
  "jest": {
    "preset": "jest-expo"
  }
}
